{
  "name": "@yc-web-component/lit",
  "private": true,
  "version": "1.0.0",
  "description": "A simple web component",
  "main": "./lib/esm/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.js",
  "type": "module",
  "scripts": {
    "lib": "yarn clean && yarn build",
    "build": "tsc && rollup -c",
    "build:watch": "rollup -c --watch",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "css:watch": "node watch.css.mjs",
    "css:tailwind": "tailwindcss -i ./src/components/theme/tailwind/main.css -o ./src/components/theme/tailwind/dist/tailwind.css --minify",
    "css:tailwind:watch": "yarn css:tailwind --watch",
    "dev": "concurrently \"yarn serve\" \"yarn tsc:watch\" \"yarn build:watch\" \"yarn css:watch\"",
    "clean": "rimraf lib",
    "lint": "yarn lint:lit-analyzer && yarn lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier \"src/**/*.{cjs,html,js,json,md,ts}\" --ignore-path ./.eslintignore --write",
    "docs": "yarn docs:clean && yarn analyze && yarn docs:build && yarn docs:gen && yarn docs:assets",
    "docs:clean": "rimraf docs",
    "docs:gen": "eleventy --config=.eleventy.cjs",
    "docs:gen:watch": "eleventy --config=.eleventy.cjs --watch",
    "docs:build": "rollup -c --dir lib",
    "docs:assets": "shx cp node_modules/prismjs/themes/prism-okaidia.css docs/",
    "docs:serve": "wds --root-dir=docs --node-resolve --watch",
    "analyze": "cem analyze --litelement --globs \"src/**/*.ts\"",
    "analyze:watch": "cem analyze --litelement --globs \"src/**/*.ts\" --watch",
    "serve": "wds --watch",
    "serve:prod": "cross-env MODE=prod yarn serve",
    "test": "yarn test:dev && yarn test:prod",
    "test:dev": "tsc && wtr",
    "test:watch": "wtr --watch",
    "test:prod": "tsc && cross-env MODE=prod wtr",
    "test:prod:watch": "cross-env MODE=prod wtr --watch",
    "pretest": "playwright install"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "dependencies": {
    "lit": "^2.8.0",
    "number-precision": "^1.6.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.0.0",
    "@custom-elements-manifest/analyzer": "^0.6.3",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.7",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@web/dev-server": "^0.1.31",
    "@web/dev-server-legacy": "^1.0.0",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-playwright": "^0.9.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "eslint": "^8.15.0",
    "lit-analyzer": "^1.2.1",
    "postcss": "^8.4.47",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^4.18.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-summary": "^2.0.1",
    "rollup-plugin-svg": "^2.0.0",
    "sass": "^1.77.8",
    "shx": "^0.3.4",
    "tailwindcss": "^3.4.12",
    "typescript": "~5.5.0",
    "uglifycss": "^0.0.29"
  },
  "customElements": "custom-elements.json"
}
